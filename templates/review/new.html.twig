{% extends 'base.html.twig' %}

{% block title %}new address{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        {{ 'new-review'|trans }}
                    </div>
                    <div class="card-body">
                        {{ form_start(reviewForm) }}
                        <div class="row">
                            <div class="col-9">
                                {{ form_row(reviewForm.title) }}
                            </div>
                            <div class="col-3">
                                {{ form_row(reviewForm.durationOfStayInMonths) }}
                            </div>
                        </div>
                       <div class="d-flex justify-content-between align-items-center">
                           <div class="mdi mdi-heart-broken fs-3"></div>
                           <div class="w-75">{{ form_row(reviewForm.buildingRating) }}</div>
                           <div class="mdi mdi-heart fs-3"></div>
                       </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mdi mdi-heart-broken fs-3"></div>
                            <div class="w-75">{{ form_row(reviewForm.priceRating) }}</div>
                            <div class="mdi mdi-heart fs-3"></div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mdi mdi-heart-broken fs-3"></div>
                            <div class="w-75">{{ form_row(reviewForm.managementRating) }}</div>
                            <div class="mdi mdi-heart fs-3"></div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mdi mdi-heart-broken fs-3"></div>
                            <div class="w-75">{{ form_row(reviewForm.locationRating) }}</div>
                            <div class="mdi mdi-heart fs-3"></div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mdi mdi-heart-broken fs-3"></div>
                            <div class="w-75">{{ form_row(reviewForm.transportRating) }}</div>
                            <div class="mdi mdi-heart fs-3"></div>
                        </div>
                        {{ form_row(reviewForm.explanation) }}
                        {{ form_row(reviewForm.address) }}
                        <a href="{{ path('address_new') }}">{{ 'can-not-find-address'|trans }}</a>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">{{ 'create'|trans }}</button>
                        </div>
                        {{ form_end(reviewForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

